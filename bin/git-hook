#!/usr/bin/env bash

set -e

command="$1"
case "$command" in
  "" | "-v" | "--version" )
    echo "git-hook 1.0.1"
    ;;
  * )
    # alias
    case "$command" in
      ls )
        command="list"
        ;;
      rm )
        command="uninstall"
        ;;
      --help | -h )
        command="help"
        ;;
    esac
    command_path="$(command -v "git-hook-$command" || true)"
    if [ -z "$command_path" ]; then
      echo "git-hook no such command \`$command'" >&2
      exit 1
    fi

    shift 1
    exec "$command_path" "$@"
    ;;
esac
